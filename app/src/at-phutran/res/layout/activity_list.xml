<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".viewandviewgroup.ListActivity">

    <Button
        android:id="@+id/btnExercise1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorGreen"
        android:text="@string/exercise1" />

    <Button
        android:id="@+id/btnExercise2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorGreen"
        android:text="@string/exercise2" />
    <Button
        android:id="@+id/btnExercise3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorGreen"
        android:text="@string/exercise3" />
</LinearLayout>
