<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="asiantech.internship.summer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".viewandviewgroup.HomeActivity"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewandviewgroup.ViewAndViewGroupActivity" />
        <activity android:name=".eventandlistener.EventAndListenerActivity" />
        <activity android:name=".activityandfragment.LoginActivity" />
        <activity android:name=".activityandfragment.InformationActivity" />
        <activity android:name=".recyclerview.RecyclerViewActivity" />
        <activity android:name=".viewpager.ViewPagerActivity" />
        <activity android:name=".storage.FileStoreActivity" />
        <activity android:name=".storage.EmployeeActivity" />
        <activity android:name=".restapi.RestApiActivity" />
        <activity android:name=".asynctaskthreadhandler.AsyncTaskThreadHandlerActivity" />
        <activity android:name=".servicesbroadcast.ServicesBroadcastActivity" />
        <receiver android:name=".servicesbroadcast.PlayMusicReceiver">
            <intent-filter>
                <action android:name="ACTION_CLICK"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
