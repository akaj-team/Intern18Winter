<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvToolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorCyan"
        android:gravity="center"
        android:text="@string/logIn"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="@string/textEnglishMaster"
        android:textColor="@color/colorRed"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edtEmailFinal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:autofillHints="@string/textEmailFinal"
        android:background="@drawable/bg_shape_solid_white"
        android:hint="@string/textEmailFinal"
        android:inputType="textEmailAddress"
        tools:targetApi="27" />

    <EditText
        android:id="@+id/edtUsernameFinal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:autofillHints="@string/textUsernameFinal"
        android:background="@drawable/bg_shape_solid_white"
        android:hint="@string/textUsernameFinal"
        android:inputType="text"
        tools:targetApi="27" />

    <EditText
        android:id="@+id/edtPasswordFinal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:autofillHints="@string/textPasswordFinal"
        android:background="@drawable/bg_shape_solid_white"
        android:hint="@string/textPasswordFinal"
        android:inputType="textPassword"
        tools:targetApi="27" />

    <Button
        android:id="@+id/btnLoginFinal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_shape_solid_orange"
        android:text="@string/textButtonLoginFinal"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize18dp" />

</LinearLayout>
